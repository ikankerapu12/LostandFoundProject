<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/white">

    <!-- Item Name -->
    <EditText
        android:id="@+id/etItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Item Name"
        android:layout_marginTop="32dp"
        android:layout_alignParentTop="true" />

    <!-- Item Description -->
    <EditText
        android:id="@+id/etItemDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Item Description"
        android:layout_below="@id/etItemName"
        android:layout_marginTop="16dp" />

    <!-- Button to select date -->
    <Button
        android:id="@+id/btnSelectDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Date Found"
        android:layout_below="@id/etItemDescription"
        android:layout_marginTop="16dp" />

    <!-- Date Display -->
    <TextView
        android:id="@+id/tvDateFound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“… No date selected"
        android:textStyle="italic"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@id/btnSelectDate"
        android:layout_marginTop="8dp" />

    <!-- Select Location Button -->
    <Button
        android:id="@+id/btnSelectLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Location"
        android:layout_below="@id/tvDateFound"
        android:layout_marginTop="16dp" />

    <!-- Location Description -->
    <TextView
        android:id="@+id/tvSelectedLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No location selected"
        android:textStyle="italic"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@id/btnSelectLocation"
        android:layout_marginTop="8dp" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/btnSubmitItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Item"
        android:layout_below="@id/tvSelectedLocation"
        android:layout_marginTop="16dp" />

    <!-- Image Preview -->
    <ImageView
        android:id="@+id/capturedImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_above="@id/btnTakePicture"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background" />

    <!-- Take Photo Button -->
    <Button
        android:id="@+id/btnTakePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take a Photo"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
